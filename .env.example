# ==========================================
# Airflow Configuration
# ==========================================

# Generate a Fernet key with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
export AIRFLOW_FERNET_KEY=your-fernet-key-here

# ==========================================
# Snowflake Configuration (Required)
# ==========================================
# These environment variables are used by the dbt profiles.yml

export SNOWFLAKE_ACCOUNT=your-account
export SNOWFLAKE_USER=your-username
export SNOWFLAKE_PASSWORD=your-password
export SNOWFLAKE_ROLE=ACCOUNTADMIN
export SNOWFLAKE_WAREHOUSE=your-warehouse
export SNOWFLAKE_DATABASE=CYBERSECURITY_DB
export SNOWFLAKE_SCHEMA=PUBLIC

# ==========================================
# Optional: Airflow Connection (not required if using profiles.yml)
# ==========================================
# You can also set up an Airflow connection string if needed
# export AIRFLOW_CONN_DWH_DEFAULT=snowflake://${SNOWFLAKE_USER}:${SNOWFLAKE_PASSWORD}@${SNOWFLAKE_ACCOUNT}/${SNOWFLAKE_DATABASE}/${SNOWFLAKE_SCHEMA}?warehouse=${SNOWFLAKE_WAREHOUSE}&role=${SNOWFLAKE_ROLE}
